{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["../shared/types/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
