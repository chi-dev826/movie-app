{
  "version": 2,
  "projects": [
    {
      "rootDirectory": "frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "framework": "vite"
    },
    {
      "rootDirectory": "backend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "functions": {
        "api/index.js": {
          "runtime": "@vercel/node"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
