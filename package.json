{
  "name": "movie-app-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "cd backend && ./venv/Scripts/activate && uvicorn main:app --reload",
    "build": "npm run build --prefix frontend",
    "lint": "npm run lint --prefix frontend && npm run lint --prefix backend",
    "lint:fix": "npm run lint:fix --prefix frontend && npm run lint:fix --prefix backend",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.24",
    "react-player": "^3.3.3"
  }
}
